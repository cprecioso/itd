{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "lib",
    "rootDir": "src",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowJs": true,
    "checkJs": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*", "types/**/*"]
}
